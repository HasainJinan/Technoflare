<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Technoflare</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body style="background-color: #F0F8FF;">
        {% include "components/homenavbar.html.jinja" %}
        <h1>Browse Page</h1>

        <form class="container" action="/browse">
            <div class="input-group mb-3">
                <input type="text" name="query" class="form-control" placeholder="Search" aria-label="Search">
                <button class="btn bg-success" type="submit" style="color: #FFFFFF;">Search</button>
            </div>
        </form>

        <div class="container row g-4 mx-auto">
            {%for item in products%}
                <div class="col-md-6 col-lg-4 col-20">
                    <div class="card">
                        <img src="{{item['image']}}" class="card-img-top" alt="{{item['name']}}">
                        <div class="card-body">
                            <h5 class="card-title">{{item["name"]}}</h5>
                            <p class="card-text">${{item["price"]}}</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            {%endfor%}
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>